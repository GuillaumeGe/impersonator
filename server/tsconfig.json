{
    "compilerOptions": {
      "target": "ES6",               // Transpile to ES6 or later
      "module": "commonjs",          // Use CommonJS module system for Node.js
      "outDir": "./dist",            // Specify output directory for compiled JS files
      "rootDir": "./src",            // Specify the root directory of TypeScript files
      "esModuleInterop": true,       // Enable ES module compatibility (optional)
      "strict": false,                // Enable strict type-checking options
      "skipLibCheck": true,           // Skip type-checking of declaration files for faster compilation
      "allowJs": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": ["src/**/*.ts"],       // Include all .ts files in the src directory
    "exclude": ["node_modules"]       // Exclude node_modules
  }
  